<!DOCTYPE html>
<html>
<head>
  <title>YummyRecipe</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<%= render :partial => 'partials/navbar' %>

<div class="container">
  <div class="row">
    <div class="col-sm-2">
      <%= render :partial => 'partials/sidebar', locals: { food_preferences: @food_preferences,
                                                           food_types: @food_types,
                                                           cuisines: @cuisines }  %>
    </div>
    <div class="col-sm-10">
      <%= yield %>
    </div>
  </div>
</div>
</body>
</html>
